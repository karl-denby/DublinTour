<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView android:id="@+id/placeImage"
            android:contentDescription="@string/hello"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="5"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:padding="4dp"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView android:id="@+id/placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/location_name_tSize"/>

            <TextView android:id="@+id/placeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/location_desc_tSize"/>

        </LinearLayout>

        <ImageView android:id="@+id/placeLocation"
            android:contentDescription="@string/hello"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/location"
            android:padding="4dp"
            android:layout_weight="5"
            android:layout_gravity="end"/>

</LinearLayout>